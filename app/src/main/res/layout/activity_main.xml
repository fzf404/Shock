    <com.gcssloop.widget.ArcSeekBar
        android:id="@+id/arc_seek_bar"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_marginTop="20dp"
        app:arc_open_angle="90"
        app:arc_progress="0"
        app:arc_rotate_angle="90"
        app:arc_thumb_color="#fff"
        app:arc_thumb_mode="STROKE"
        app:arc_thumb_radius="16dp"
        app:arc_thumb_shadow_color="#000000"
        app:arc_thumb_shadow_radius="3dp"
        app:arc_thumb_width="3dp"
        app:arc_width="40dp"

        app:arc_border_width="4dp"
        app:arc_max="8"
        app:arc_min="0"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/buttonRA" />

    <TextView
        android:id="@+id/title"
        android:layout_width="298dp"
        android:layout_height="56dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="脉冲经颅刺激仪"
        android:textColor="#B39DDB"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textGrade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:paddingLeft="10sp"
        android:paddingRight="10sp"
        android:shadowColor="#00f"
        android:shadowRadius="30"
        android:text="0"
        android:textColor="#80DEEA"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="@+id/arc_seek_bar"
        app:layout_constraintEnd_toEndOf="@+id/arc_seek_bar"
        app:layout_constraintStart_toStartOf="@+id/arc_seek_bar"
        app:layout_constraintTop_toTopOf="@+id/arc_seek_bar" />


</androidx.constraintlayout.widget.ConstraintLayout>